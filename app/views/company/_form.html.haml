.container
	.row
		.col-md-6.col-md-offset-3
			= simple_form_for @company, url: edit_company_path ,:method => 'put' do |f|
				- if @company.errors.any?
					#errors
						%p
							= @company.errors.count
							Prevented this company from saving.
						%ul
							- @company.errors.full_messages do |msg|
								%li= msg
				.panel-body
					= f.input :name, input_html: { class: 'form-control' }
					= f.input :description, input_html: { class: 'form-control' }
					= f.input :address, input_html: { class: 'form-control' }
					= f.input :phone, input_html: { class: 'form-control' }
					= f.input :email, input_html: { class: 'form-control' }
					= f.input :website, input_html: { class: 'form-control' }

				= f.button :submit, class: "btn btn-primary pull-right"