.container
	.row
		.col-md-6.col-md-offset-3
			= simple_form_for @product, html: { multipart: true } do |f|
				- if @product.errors.any?
					#errors
						%p
							= @product.errors.count
							Prevented this product from saving
						%ul
							- @product.errors.full_messages do |msg|
								%li= msg
				.panel-body
					= f.input :name, input_html: { class: 'form-control' }
					= f.input :place, input_html: { class: 'form-control' }
					= f.input :latitude, input_html: { class: 'form-control' }
					= f.input :longitude, input_html: { class: 'form-control' }
					= f.input :description, input_html: { class: 'form-control' }
					= f.input :image, input_html: { class: 'form-control' }

				= f.button :submit, class: "btn btn-primary pull-right"