- @product.each_slice(3) do |products|
	.row
		- products.each do |product|
			.col-md-4
				.product
					.image_wrapper	
						= link_to product, {"data-no-turbolink" => "true"} do
							= image_tag product.image.url(:medium)
					%h2
						= link_to product.name + " from " + product.place, product, {"data-no-turbolink" => "true"}